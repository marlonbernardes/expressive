{
  "name": "@bitmountain/expressive",
  "version": "1.0.3",
  "description": "Simple, flexible and lightweight library for creating express routers using decorators.",
  "main": "lib/index.js",
  "repository": "git@github.com:BitMountain/expressive.git",
  "author": "Marlon Bernardes <marlonjb.cb@gmail.com>",
  "keywords": [
    "bitmountain",
    "expressive",
    "typescript",
    "decorator",
    "decorators",
    "library",
    "lightweight"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "pretty": "prettier --write \"{src,tests}/**/*.ts\"",
    "release": "release-it",
    "test": "npm run test:express:4 && npm run test:express:next",
    "test:express:4": "npm install express@4 --no-save && jest",
    "test:express:next": "npm install express@next --no-save && jest",
    "test:watch": "npm install express@4 --no-save && jest --coverage=false --watch"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {
    "express": "^4.x || ^5.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^10.0.0",
    "@release-it/conventional-changelog": "^5.1.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "release-it": "^15.4.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json}": "eslint --cache --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build",
        "npm test",
        "npm run lint"
      ]
    },
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  }
}
