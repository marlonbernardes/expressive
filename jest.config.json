{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts"],
  "coverageReporters": ["json-summary"],
  "testMatch": ["**/tests/**/*.spec.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "moduleFileExtensions": ["ts", "js", "json", "node"]
}

